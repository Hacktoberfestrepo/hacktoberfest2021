#include <bits/stdc++.h>
using namespace std;
int main() {
   int n;
   cin>>n;
   if(n==3){
       cout<<1<<endl;
       cout<<3<<endl;
   }
   else
   if(n%2 == 0){
       cout<<n/2<<endl;
       vector<int> v;
       for(int i=0;i<n/2;i++){
           v.push_back(2);
       }
       for(int i=0;i<v.size();i++){
           cout<<v[i]<<" ";
       }
       cout<<endl;
   }
   else{
       cout<<n/2<<endl;
       vector<int> temp;
       for(int i=0;i<(n/2)-1;i++){
           temp.push_back(2);
       }
       for(int i=0;i<temp.size();i++){
           cout<<temp[i]<<" ";
       }cout<<3;
       cout<<endl;
   }
}